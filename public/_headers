# Global security headers
/*
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https: wss:; img-src 'self' data: https:; font-src 'self'; object-src 'none'; base-uri 'self'
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Content-Type-Options: nosniff

# Headers for all JS files
/assets/*.js
  Content-Type: application/javascript
  Cache-Control: public, max-age=31536000, immutable

# Headers for CSS files  
/assets/*.css
  Content-Type: text/css
  Cache-Control: public, max-age=31536000, immutable

# Main HTML file
/
  Cache-Control: public, max-age=0, must-revalidate

# Prevent MIME type issues for any JS file
/*.js
  Content-Type: application/javascript

# SVG files
/*.svg
  Content-Type: image/svg+xml

# JSON files
/*.json
  Content-Type: application/json
